from tarefa import Usuario
class Livro:
    def __init__(self, autor, nome, disponivel, cod_livro):
        self.autor = autor
        self.nome = nome
        self.cod_livro = cod_livro
        self.disponivel = 'Disponivel'


    def emprestimo_livro(self, Usuario):
        if self.disponivel != 'disponivel':
            return

        self.usuario = Usuario
        self.disponivel = "Emprestado"

    def devolver_livro(self):
        if self.disponivel != 'Emprestado':
                return 'Não'





































































Users = {
    'Filipe':Usuario(
    nome="Filipe",
    email="filipe_limoes@gmail.com",
    senha="amigo_dos_cavalos"
),
}

while True:
    op = input("""
               Opções
          |1|Cadastrar Usuario
          |2|Print Usuarios
          |0|Sair""")

    if op == '1':
        n1 = input("Digite o seu Nome: ")
        n2 = input("Digite o seu Email: ")
        n3 = input("Digite sua Senha")
        Users.update({n1:Usuario(n1,n2,n3)})

    if op == '2':
        for i,  in Users:
            print(i)

    if op == '0':
        print("Tenha um Bom Dia. (^-^)")
        break

